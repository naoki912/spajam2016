<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wcdi.spajam2016.ModeSelectingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group ID"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:id="@+id/Hello2"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/Hello2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_id"
            android:hint="id"
            android:text="9999"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:layout_marginRight="24dp"
            android:layout_alignTop="@+id/Hello2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member"
            android:id="@+id/number_of_member"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="30dp"
            android:layout_alignTop="@+id/group_id"
            android:layout_toStartOf="@+id/group_id" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hello"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:text="Please select mode"
        android:textSize="40sp"
        android:textColor="@android:color/white" />

    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/center_view">


        <View
            android:id="@+id/center_view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/center_view2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_mode_selecting__select_coming_out_button"
                android:layout_margin="4dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/buttyake"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming out"
                android:id="@+id/textView4"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="32dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/center_view2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_mode_selecting__select_question_button"
                android:layout_margin="4dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/gimon"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:id="@+id/textView5"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp" />
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
