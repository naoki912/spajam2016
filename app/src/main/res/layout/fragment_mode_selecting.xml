<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wcdi.spajam2016.ModeSelectingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group ID"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:id="@+id/dummy"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:id="@+id/group_id"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dummy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_of_member"
            android:hint="id"
            android:text="9999"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:layout_marginRight="24dp"
            android:layout_alignTop="@+id/dummy"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member"
            android:id="@+id/dummy2"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="30dp"
            android:layout_alignTop="@+id/number_of_member"
            android:layout_toStartOf="@+id/number_of_member" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hello"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:text="Please select mode"
        android:textSize="40sp"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="288dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="208dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_mode_selecting__select_coming_out_button"
                android:layout_margin="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_marginTop="8dp"
                android:src="@drawable/buttyake"
                android:layout_gravity="center_horizontal|top" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:text="Coming     out"
                android:id="@+id/textView4"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="48dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:id="@+id/textView5"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:layout_marginTop="48dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_mode_selecting__select_question_button"
                android:layout_margin="4dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/gimon"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
